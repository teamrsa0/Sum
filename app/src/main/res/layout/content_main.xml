<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et1"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Number 1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:id="@+id/et2"
        android:layout_below="@+id/et1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="68dp"
        android:hint="Number 2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sum"
        android:id="@+id/bt_sum"
        android:onClick="onButtonClick"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/et2"
        android:layout_alignEnd="@+id/et2"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUB"
        android:id="@+id/bt_sub"
        android:layout_alignTop="@+id/bt_sum"
        android:layout_alignLeft="@+id/bt_sum"
        android:layout_alignStart="@+id/bt_sum"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIV"
        android:id="@+id/bt_div"
        android:layout_below="@+id/bt_sum"
        android:layout_alignLeft="@+id/bt_sub"
        android:layout_alignStart="@+id/bt_sub" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MULT"
        android:id="@+id/bt_mult"
        android:layout_below="@+id/bt_sum"
        android:layout_alignLeft="@+id/bt_sum"
        android:layout_alignStart="@+id/bt_sum" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESULT..."
        android:id="@+id/tv1"
        android:layout_below="@+id/bt_div"
        android:layout_alignLeft="@+id/bt_mult"
        android:layout_alignStart="@+id/bt_mult"
        android:layout_marginTop="48dp"
        android:layout_alignRight="@+id/bt_div"
        android:layout_alignEnd="@+id/bt_div" />
</RelativeLayout>
